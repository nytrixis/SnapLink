{
    "name": "SnapLink",
    "version": "1.0.1",
    "manifest_version": 3,
    "description": "Lock in links for later viewing",
    "action": {
      "default_icon": "icons/icon48.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage",
      "activeTab"
    ],
    "commands": {
      "add-url": {
        "description": "Add current page to SnapLink",
        "shortcut": {
          "suggested_key": {
            "default": "Alt+N",
            "mac": "Option+N"
          }
        }
      }
    }
  }
  